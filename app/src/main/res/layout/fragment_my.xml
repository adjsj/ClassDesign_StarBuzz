<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.MyFragment"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#008CC8">

        <ImageView
            android:id="@+id/login"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:src="@mipmap/login_btn"
            android:layout_centerHorizontal="true"/>

        <ImageView
            android:id="@+id/coupon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/me_menu_sail"
            android:layout_below="@id/login"
            android:layout_marginLeft="40dp"/>

        <ImageView
            android:id="@+id/discount"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/me_menu_yh"
            android:layout_below="@id/login"
            android:layout_centerHorizontal="true"/>

        <ImageView
            android:id="@+id/cart"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/me_menu_go"
            android:layout_below="@id/login"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40dp"/>
        
        <TextView
            android:id="@+id/coupon_txt"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="优惠券"
            android:layout_below="@id/coupon"
            android:layout_marginLeft="40dp"
            android:textColor="#ffffff"/>

        <TextView
            android:id="@+id/discount_txt"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="折扣卡"
            android:layout_below="@id/discount"
            android:layout_marginLeft="40dp"
            android:textColor="#ffffff"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/cart_txt"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="购物车"
            android:layout_below="@id/cart"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40dp"
            android:textColor="#ffffff"/>
    </RelativeLayout>

    <ListView
        android:id="@+id/menu_listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"></ListView>


</LinearLayout>